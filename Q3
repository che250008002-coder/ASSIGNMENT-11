#include <iostream>
#include <string>
using namespace std;

int main(){

    char str[100];
    char pattern[4];  
    cout << "Enter a string: ";
    cin.getline(str, 100);

    cout << "Enter 3-character pattern to search: ";
    cin.getline(pattern, 4);

    int found = 0;


    for(int i = 0; str[i] != '\0'; i++) {
    
        if(str[i] == pattern[0] &&
           str[i+1] == pattern[1] &&
           str[i+2] == pattern[2]) {
            found = 1;
            cout << "Pattern found at index " << i << endl;
            break;
        }
    }

    if(!found) {
        cout << "Pattern not found." << endl;
    }

  
    
    return 0;
}
